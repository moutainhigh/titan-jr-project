<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fangcang.titanjr.dao.TitanOrderExceptionDao">
    <resultMap id="resultMapOrderException" type="com.fangcang.titanjr.entity.TitanOrderException">
        <result property="id" column="id"/>
        <result property="orderId" column="orderid"/>
        <result property="exceptionMsg" column="exceptionmsg"/>
        <result property="exceptionCode" column="exceptioncode"/>
        <result property="exceptionTime" column="exceptioncode"/>
        <result property="exceptionContent" column="exceptioncontent"/>
    </resultMap>
	
	<select id="queryOrderException" parameterType="com.fangcang.titanjr.entity.TitanOrderException" resultMap="resultMapOrderException">
	  select 
	  id,
	  orderid,
	  exceptionmsg,
	  exceptioncode,
	  exceptionTime,
	  exceptioncontent 
	  from
	  t_tfs_order_exception
	  <where>
	    <if test="orderId !=null">
	      orderid = #{orderId}
	    </if>
	  </where>
	</select>
	
	<insert id="insertOrderException" parameterType="com.fangcang.titanjr.entity.TitanOrderException">
	  insert into t_tfs_order_exception 
	  values
	  (id,
	  #{orderId},
	  #{exceptionMsg},
	  #{exceptionCode},
	  #{exceptionTime},
	  #{exceptionContent})
	</insert>
	
</mapper>
